# SADP AI Integration Environment Configuration
# 환경 변수 설정 파일

# ===========================================
# AI API 설정 (선택사항)
# ===========================================
# OpenAI API (Cursor AI용)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API (Claude AI용)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Groq API (추가 AI 모델용)
GROQ_API_KEY=your_groq_api_key_here

# ===========================================
# 서버 설정
# ===========================================
# FastAPI 서버 설정
HOST=127.0.0.1
PORT=8000
DEBUG=true
ENVIRONMENT=development

# ===========================================
# 데이터베이스 설정 (선택사항)
# ===========================================
# SQLite (로컬 개발용)
DATABASE_URL=sqlite:///./sadp.db

# PostgreSQL (프로덕션용)
# DATABASE_URL=postgresql://username:password@localhost:5432/sadp

# ===========================================
# Redis 설정 (선택사항)
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# 로깅 설정
# ===========================================
LOG_LEVEL=INFO
LOG_FILE=sadp.log

# ===========================================
# SADP Core 설정
# ===========================================
# 협업 모드 기본값
DEFAULT_COLLABORATION_MODE=sequential

# AI 에이전트 활성화 여부
ENABLE_CLAUDE_AI=true
ENABLE_CURSOR_AI=true
ENABLE_FIGMA_AI=true

# 성과 지표 수집
ENABLE_METRICS=true
METRICS_INTERVAL=60

# ===========================================
# 보안 설정
# ===========================================
# API 키 (프로덕션에서 변경 필요)
SECRET_KEY=sadp-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# GERI/JSIC 설정
# ===========================================
ORGANIZATION_NAME=GERI
PROJECT_NAME=SADP AI Integration
ADMIN_EMAIL=sshin@geri.kr

# ===========================================
# 개발 설정
# ===========================================
# 자동 리로드 (개발용)
RELOAD=true

# 테스트 모드
TEST_MODE=false

# 디버그 출력
VERBOSE_LOGGING=true
